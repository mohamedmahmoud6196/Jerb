<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/margin_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15">

        <TextView
            android:id="@+id/tv_label_plan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan "
            android:textColor="@color/purple"
            android:textSize="@dimen/tv_label_20sp"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_15"/>

        <TextView
            android:id="@+id/tv_plan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_15"
            android:text="A "
            android:layout_toEndOf="@id/tv_label_plan_name"
            android:textColor="@color/purple"
            android:textSize="@dimen/tv_label_20sp" />


        <TextView
            android:id="@+id/tv_plan_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_label_plan_name"
            android:text="Location"
            android:layout_marginBottom="@dimen/margin_10"/>

        <TextView
            android:id="@+id/tv_friends_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_plan_location"
            android:layout_marginBottom="@dimen/margin_10"/>

        <TextView
            android:id="@+id/tv_label_friends_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_plan_location"
            android:layout_toEndOf="@id/tv_friends_num"
            android:text="@string/family"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_toRightOf="@id/tv_friends_num" />

        <TextView
            android:id="@+id/tv_label_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_friends_num"
            android:text="@string/cost" />

        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_label_friends_num"
            android:layout_toEndOf="@id/tv_label_cost"
            android:text="@string/cost"
            android:layout_toRightOf="@id/tv_label_cost" />

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/donut_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="50dp"
            custom:donut_finished_color="@color/purple"
            custom:donut_progress="40"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>