<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/margin_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tip_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_marginStart="@dimen/margin_5"
            android:text="1"
            android:textColor="@color/grey"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/tv_tip_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:lines="3"
            android:maxWidth="240dp"
            android:text="sfasfsfasfsafsafsafsafsafasfsafsafsafsafsafasfsafasfasfasf" />

        <ImageView
            android:id="@+id/image_tip"
            android:layout_width="@dimen/width_height_55"
            android:layout_height="@dimen/width_height_55"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5" />
    </RelativeLayout>
</android.support.v7.widget.CardView>